!!!
%html
  %head
    %title RememberMe
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #header
      %ul.devise_navigation
        - if user_signed_in?
          %li= link_to 'Create a group', new_group_path
          %li= link_to 'Join a Group', new_group_membership_path
          %li= link_to 'My Groups', groups_path
          %li= link_to 'My Contacts', users_path
          %li= link_to 'My Profile', user_path(current_user)
          %li= link_to 'Sign out', destroy_user_session_path, method: 'delete'
        - else
          %li= link_to 'Sign in', new_user_session_path
          %li= link_to 'Sign up', new_user_registration_path
    %h1#raven= image_tag "Raven_on_Red.png"
    #content
      .alert= alert
      .notice= notice
      = yield

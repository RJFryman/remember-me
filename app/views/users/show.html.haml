%h1= user.name
%ul
  %li
    Email:
    = mail_to(user.email)
  %li
    Phone:
    = user.phone
  %li
    website:
    -if user.website
      = link_to("#{user.website}", "http://"+user.website)
  %li
    Address:
    = user.address
  %li
    City:
    = user.city
  %li
    State:
    = user.state
  %li
    Zip:
    = user.zip

-if user == current_user
  = link_to "Edit My Profile", [:edit, current_user]
